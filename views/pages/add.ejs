Task: <input type="text" id="<%= name.name  %>"> <br>
Due Date: <select id="day">
    <% for(var i=1; i<13; i++) {%>
    <option value=<%= i %>><%= i %></option>
    <% } %>
    </select>
    <select id="month">
    <% for(var i=1; i<32; i++) {%>
    <option value=<%= i %>><%= i %></option>
    <% } %>
    </select>
    <select id="year">
    <option value=2019>2019</option>
    <option value=2020>2020</option>
    <option value=2021>2021</option>
    </select>
<button onclick="addTask('<%=name.name%>')">Add Task</button>