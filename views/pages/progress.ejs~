<!DOCTYPE html>
<html>
  <head>
    <title>Task Menu</title>
    <script>
      function request() {
         var xhttp = new XMLHttpRequest();
         xhttp.onreadystatechange = function() {
            if (this.readyState == 4 && this.status == 200) {
               document.getElementById("task").innerHTML = this.responseText;
            }
         };
         xhttp.open("GET", "/data", true);
         xhttp.send();
      }
    </script>
  </head>
  <body>
    <h1>Welcome <%= userValue.name %></h1>
    <h2>Current Tasks</h2>
    <form action="" method="post" id="tasks">
      <% for (var i = 0; i < userValue.size; i++) { %>
	 <input type="checkbox" onclick="request()"> <%= userValue.task[i] %> <br>
	 <% } %>
    </form>
    <div id="test"></div>
  </body>
</html>
